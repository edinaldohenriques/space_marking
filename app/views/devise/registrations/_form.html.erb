<%= form_with(model: @user, url: registration_path(resource_name), id: "user_form", data: { turbo_frame: "_top" }) do |f| %>
<%= render "devise/shared/error_messages", resource: @user %>

  <div class="form-group">
    <%= f.label :email, "Email:", class: "required" %>
    <%= f.email_field :email, id: "email", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Senha Atual", class: "required" %>
    <%= f.password_field :current_password, type: "password-field", placeholder: "Senha atual", autocomplete: "off" %>
  </div>
  
  <div class="form-group">
    <%= f.label :password, "Nova senha: (mÃ­nimo de 6 caracteres)", class: "required" %>
    <%= f.password_field :password, type: "password-field", id: "Password", placeholder: "Nova senha", autocomplete: "off" %>
  </div>
  
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirme sua senha:", class: "required" %>
    <%= f.password_field :password_confirmation, type: "password-field", id: "Password Confirmation", placeholder: "Confirme sua senha", autocomplete: "off" %>
  </div>
  
  <div class="button-container">
    <button class="button-back"><%= link_to 'Voltar', request.referrer, class: "link-back" %></button>
    <%= f.submit "Atualizar", id: "button-submit" %>
  </div>
<% end %>