<body class="body-registration">
  <h1 class="h1-registration">Preencha com seus Dados</h1>

  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="form-group">
        <%= f.label :name, "Nome:" %>
        <%= f.text_field :name, id: "nome" %>
      </div>
      
      <div class="form-group">
        <%= f.label :student_id_number, "Número de matrícula:" %>
        <%= f.text_field :student_id_number, id: "numero_matricula" %>
      </div>
      
      <div class="form-group">
        <%= f.label :email, "Email:" %>
        <%= f.email_field :email, id: "email" %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, "Senha: (mínimo de 6 caracteres)" %>
        <%= f.password_field :password, id: "Password" %>
      </div>
      
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirme sua senha:" %>
        <%= f.password_field :password_confirmation, id: "Password Confirmation" %>
      </div>
      
      <div class="button-container">
        <button class="button-back"><%= link_to 'Voltar', new_user_session_path, class: "link-back" %></button>
        <%= f.submit "Cadastrar", id: "button-submit" %>
      </div>

    <% end %>
  </div>
</body>
